<div id='api_content'>
  <% near_earth_object = @keys['near_earth_objects'] %>
  <% content = near_earth_object[@today][5] %>
  <% diameter = content['estimated_diameter'] %>
  <% diameter_kilometers = diameter['kilometers'] %>
  <% diameter_meters = diameter['meters'] %>
  <% diameter_miles = diameter['miles'] %>
  <% diameter_feet = diameter['feet'] %>
  <% close = content["close_approach_data"][0] %>
  <% speed = close["relative_velocity"] %>
  <% miss = close['miss_distance'] %>
  <table>
    <tr>
      <td> Element Count </td>
      <td> <%= @keys['element_count'] %> </td>
    </tr>
    <tr>
      <td> neo_reference_id</td>
      <td> <%= content['neo_reference_id'] %></td>
    </tr>
    <tr>
      <td>name</td>
      <td><%= content['name'] %></td>
    </tr>
  <tr>
    <td>nasa_jpl_url </td>
    <td><a id='nasa_jpg' href= '<%= content["nasa_jpl_url"] %>' ><%= content["nasa_jpl_url"] %></a></td>
  </tr>
  <tr>
    <td>absolute_magnitude_h </td>
    <td><%= content["absolute_magnitude_h"] %></td>
  </tr>
  <tr>
    <td>estimated_diameter_min in kilometers</td>
    <td><%= diameter_kilometers["estimated_diameter_min"] %></td>
  </tr>
  <tr>
    <td>estimated_diameter_max</td>
    <td><%= diameter_kilometers["estimated_diameter_max"] %></td>
  </tr>
  <tr>
    <td>estimated diameter min in meters</td>
    <td><%= diameter_meters["estimated_diameter_min"] %></td>
  </tr>
  <tr>
    <td>estimated diameter max in meters</td>
    <td><%= diameter_meters["estimated_diameter_max"] %></td>
  </tr>
  <tr>
    <td>estimated diameter min in miles</td>
    <td><%= diameter_miles["estimated_diameter_min"] %></td>
  </tr>
  <tr>
    <td>estimated diameter max in miles</td>
    <td><%= diameter_miles["estimated_diameter_max"] %></td>
  </tr>
  <tr>
    <td>estimated diameter min in feet</td>
    <td><%= diameter_feet["estimated_diameter_min"] %></td>
  </tr>
  <tr>
    <td>estimated diameter max in feet</td>
    <td><%= diameter_feet["estimated_diameter_max"] %></td>
  </tr>
  <tr>
    <td>Asteroid is dangerous</td>
    <td><%= content["is_potentially_hazardous_asteroid"] %></td>
  </tr>
  <tr>
    <td>Date of close approach</td>
    <td><%= close["close_approach_date"] %></td>
  </tr>
  <tr>
    <td>Epoch date of close approach</td>
    <td><%= close["epoch_date_close_approach"] %></td>
  </tr>
  <tr>
    <td>speed in km/s</td>
    <td><%= speed["kilometers_per_second"] %></td>
  </tr>
  <tr>
    <td>speed in km/h</td>
    <td><%= speed["kilometers_per_hour"] %></td>
  </tr>
  <tr>
    <td>speed in mp/h</td>
    <td><%= speed['miles_per_hour'] %></td>
  </tr>
  <tr>
    <td>astronomical miss distance</td>
    <td><%= miss["astronomical"] %></td>
  </tr>
  <tr>
    <td>lunar miss distance</td>
    <td><%= miss['lunar'] %></td>
  </tr>
  <tr>
    <td>miss distance in km</td>
    <td><%= miss["kilometers"] %></td>
  </tr>
  <tr>
    <td>miss distance in miles</td>
    <td><%= miss["miles"] %></td>
  </tr>
  <tr>
    <td>orbiting body</td>
    <td><%= close["orbiting_body"] %></td>
  </tr>
  </table>
</div>
